# Server Configuration
ENV=development
HOST=0.0.0.0
PORT=9001
RELOAD=true

# ADB Configuration
ADB_HOST=127.0.0.1
ADB_PORT=5037

# SCRCpy Configuration
SCRCPY_SERVER_VERSION=2.6.1
SCRCPY_SERVER_PATH=/opt/scrcpy-server.jar
SCRCPY_MAX_SIZE=1920
SCRCPY_BIT_RATE=8000000
SCRCPY_MAX_FPS=60

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
